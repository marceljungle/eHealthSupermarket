<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
      android:id="@+id/individual_row_personal_data"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:clickable="true"
      android:foreground="?selectableItemBackground"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent">

        <ImageView
          android:id="@+id/image_testRow"
          android:layout_width="120dp"
          android:layout_height="50dp"
          android:layout_weight="1"
          app:srcCompat="@drawable/baseline_supervised_user_circle_black_24dp" />

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:orientation="vertical">

            <TextView
              android:id="@+id/textTestRow"
              android:textStyle="bold"
              android:layout_width="match_parent"
              android:layout_height="50dp"

              android:gravity="center_vertical"
              android:text="Datos personales"
              android:textSize="18sp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
      android:id="@+id/individual_row_language"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:clickable="true"
      android:foreground="?selectableItemBackground"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/individual_row_personal_data">

        <ImageView
          android:layout_width="120dp"
          android:layout_height="50dp"
          android:layout_weight="1"
          app:srcCompat="@drawable/baseline_language_black_24dp" />

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:orientation="vertical">

            <TextView
              android:textStyle="bold"
              android:layout_width="match_parent"
              android:layout_height="50dp"

              android:gravity="center_vertical"
              android:text="Idioma"
              android:textSize="18sp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
      android:id="@+id/individual_row_settings"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:clickable="true"
      android:foreground="?selectableItemBackground"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/individual_row_language">

        <ImageView
          android:layout_width="120dp"
          android:layout_height="50dp"
          android:layout_weight="1"
          app:srcCompat="@drawable/baseline_settings_black_24dp" />

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:orientation="vertical">

            <TextView
              android:textStyle="bold"
              android:layout_width="match_parent"
              android:layout_height="50dp"

              android:gravity="center_vertical"
              android:text="Ajustes"
              android:textSize="18sp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
      android:id="@+id/individual_row_help"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:clickable="true"
      android:foreground="?selectableItemBackground"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/individual_row_settings">

        <ImageView
          android:layout_width="120dp"
          android:layout_height="50dp"
          android:layout_weight="1"
          app:srcCompat="@drawable/baseline_help_black_24dp" />

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:orientation="vertical">

            <TextView
              android:textStyle="bold"
              android:layout_width="match_parent"
              android:layout_height="50dp"

              android:gravity="center_vertical"
              android:text="Ayuda"
              android:textSize="18sp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
      android:id="@+id/individual_row_suggestions"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:clickable="true"
      android:foreground="?selectableItemBackground"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/individual_row_help">

        <ImageView
          android:layout_width="120dp"
          android:layout_height="50dp"
          android:layout_weight="1"
          app:srcCompat="@drawable/baseline_email_black_24dp" />

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:orientation="vertical">

            <TextView
              android:textStyle="bold"
              android:layout_width="match_parent"
              android:layout_height="50dp"

              android:gravity="center_vertical"
              android:text="Sugerencias"
              android:textSize="18sp" />

        </LinearLayout>

    </LinearLayout>
    <LinearLayout
      android:id="@+id/individual_row_log_out"
      android:layout_width="match_parent"
      android:layout_height="50dp"
      android:layout_weight="1"
      android:clickable="true"
      android:foreground="?selectableItemBackground"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/individual_row_suggestions"
      >

        <ImageView
          android:id="@+id/imageView_product"
          android:layout_width="120dp"
          android:layout_height="50dp"
          android:layout_weight="1"
          app:srcCompat="@drawable/baseline_logout_black_24dp" />

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:orientation="vertical">

            <TextView
              android:id="@+id/textHeading"
              android:textStyle="bold"
              android:layout_width="match_parent"
              android:layout_height="50dp"

              android:gravity="center_vertical"
              android:text="Cerrar sesiÃ³n"
              android:textSize="18sp" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>