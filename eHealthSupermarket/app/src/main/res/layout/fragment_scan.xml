<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent">

  <!-- https://github.com/mancj/MaterialSearchBar -->

  <com.google.android.material.button.MaterialButton
    android:id="@+id/qrButton"
    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:text="@string/escaneo_qr"
    android:textColor="#000000"
    android:textSize="34sp"
    app:icon="@drawable/baseline_qr_code_scanner_black_48dp"
    app:iconGravity="textStart"
    app:iconSize="150dp"
    app:iconTint="#4554A6"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="@id/smartButton"
    app:layout_constraintStart_toStartOf="@id/smartButton"
    app:layout_constraintTop_toBottomOf="@id/smartButton"></com.google.android.material.button.MaterialButton>

  <com.google.android.material.button.MaterialButton
    android:id="@+id/smartButton"
    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:text="@string/escaneo_con_ia"
    android:textAllCaps="true"
    android:textColor="#000000"
    android:textSize="34sp"
    app:icon="@drawable/baseline_monochrome_photos_black_48dp"
    app:iconGravity="textStart"
    app:iconSize="150dp"
    app:iconTint="#FF0000"
    app:layout_constraintBottom_toTopOf="@id/qrButton"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:strokeColor="#FFFFFF"></com.google.android.material.button.MaterialButton>


</androidx.constraintlayout.widget.ConstraintLayout>
