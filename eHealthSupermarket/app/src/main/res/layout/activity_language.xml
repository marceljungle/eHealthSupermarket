<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".ui.account.Language">

<LinearLayout
  android:id="@+id/spanish_lang"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:layout_weight="1"
  android:clickable="true"
  android:foreground="?selectableItemBackground"
  app:layout_constraintEnd_toEndOf="parent"
  app:layout_constraintStart_toStartOf="parent"
  app:layout_constraintTop_toTopOf="parent">

  <ImageView
    android:id="@+id/image_testRow"
    android:layout_width="120dp"
    android:layout_height="50dp"
    android:layout_weight="1"
    app:srcCompat="@drawable/baseline_supervised_user_circle_black_24dp" />

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:orientation="vertical">

    <TextView
      android:id="@+id/textTestRow"
      android:textStyle="bold"
      android:layout_width="match_parent"
      android:layout_height="50dp"

      android:gravity="center_vertical"
      android:text="@string/spanish"
      android:textSize="18sp" />

  </LinearLayout>

</LinearLayout>

<LinearLayout
  android:id="@+id/english_lang"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:layout_weight="1"
  android:clickable="true"
  android:foreground="?selectableItemBackground"
  app:layout_constraintEnd_toEndOf="parent"
  app:layout_constraintStart_toStartOf="parent"
  app:layout_constraintTop_toBottomOf="@+id/spanish_lang">

  <ImageView
    android:layout_width="120dp"
    android:layout_height="50dp"
    android:layout_weight="1"
    app:srcCompat="@drawable/baseline_language_black_24dp" />

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:orientation="vertical">

    <TextView
      android:textStyle="bold"
      android:layout_width="match_parent"
      android:layout_height="50dp"

      android:gravity="center_vertical"
      android:text="@string/english"
      android:textSize="18sp" />

  </LinearLayout>

</LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>