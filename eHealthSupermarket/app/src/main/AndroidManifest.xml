<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
  package="com.gmail.gigi.dan2011.ehealthsupermarket">

  <application
    android:allowBackup="true"
    android:icon="@mipmap/ic_launcher"
    android:label="@string/app_name"
    android:networkSecurityConfig="@xml/network_security_config"
    android:requestLegacyExternalStorage="true"
    android:roundIcon="@mipmap/ic_launcher_round"
    android:supportsRtl="true"
    android:theme="@style/Theme.EHealthSupermarket"
    android:usesCleartextTraffic="true">
    <activity
      android:name=".sections.account.ProfileActivity"
      android:theme="@style/AppTheme.ProfileTheme">
    </activity>
    <activity android:name=".sections.account.Language" />
    <activity
      android:label="@string/add_products_to_your_list"
      android:name=".sections.list.AddProduct2MyList" />
    <activity android:name=".sections.intolerances.AddIntolerancesOrAdditives" />
    <activity android:name=".sections.product.ActivityProductsListView" />
    <activity
      android:label="Productos"
      android:name=".sections.list.MyListProducts" />
    <activity android:name=".sections.account.SignupActivity" />
    <activity android:name=".sections.account.ResetPasswordActivity" />
    <activity android:name=".sections.account.LoginActivity">
      <intent-filter>
        <action android:name="android.intent.action.MAIN" />

        <category android:name="android.intent.category.LAUNCHER" />
      </intent-filter>

      <meta-data
        android:name="android.support.PARENT_ACTIVITY"
        android:value=".MainActivity" />
    </activity>
    <activity
      android:label="@string/Escaneo_con_IA"
      android:name=".sections.product.AndroidCameraApi"
      android:parentActivityName=".MainActivity"
      android:theme="@style/Theme.AppCompat.NoActionBar">
      <meta-data
        android:name="android.support.PARENT_ACTIVITY"
        android:value=".MainActivity" />
    </activity>
    <activity
      android:label=""
      android:name=".sections.product.ActivityProductView"
      android:parentActivityName=".MainActivity">

      <!-- The meta-data tag is required if you support API level 15 and lower -->
      <meta-data
        android:name="android.support.PARENT_ACTIVITY"
        android:value=".MainActivity" />
    </activity>
    <activity
      android:name=".MainActivity"
      android:windowSoftInputMode="adjustPan" />

    <meta-data
      android:name="preloaded_fonts"
      android:resource="@array/preloaded_fonts" />
  </application>

  <uses-feature android:name="android.hardware.camera2.full" />
  <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
  <uses-permission android:name="android.permission.WAKE_LOCK" />
  <uses-permission android:name="android.permission.INTERNET" />
  <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
  <uses-permission android:name="android.permission.CAMERA" />

</manifest>